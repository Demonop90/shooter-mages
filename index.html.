  <script>
    const canvas = document.getElementById("gameCanvas");
    const ctx = canvas.getContext("2d");
    let score = 0;

    const bubbles = ["🦐","🧙","🪄","🔮"]; // shrimp, mage, warlock, orb
    let grid = Array.from({length:8},()=>Array.from({length:6},()=>bubbles[Math.floor(Math.random()*bubbles.length)]));

    function drawGrid(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      grid.forEach((row,r)=>{
        row.forEach((cell,c)=>{
          ctx.font="24px serif";
          ctx.fillText(cell, c*40+10, r*40+30);
        });
      });
    }
    drawGrid();
  </script>
